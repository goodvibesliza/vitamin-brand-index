---
import Base from "../../layouts/Base.astro";
const title = "Blog • Vitamin Brand Checklist";
const description = "Notes, product investigations, and industry news.";
const canonical = "https://vitaminbrandindex.com/blog/";
---
<Base {title} {description} {canonical}>
  <section class="container stack-lg">
    <h1>Blog</h1>
    <p class="lead">We’re publishing soon. For now, here are placeholder posts.</p>
    <div class="stack">
      <article class="card">
        <h2>Coming soon: How we verify brand claims</h2>
        <p class="lead">Our process for separating marketing fluff from verifiable facts.</p>
      </article>
      <article class="card">
        <h2>Recalls and notices: what matters vs noise</h2>
        <p class="lead">A simple checklist consumers can use today.</p>
      </article>
    </div>
  </section>
</Base>
