---
import Base from "../layouts/base.astro";
const title = "For Brands â€¢ Vitamin Brand Checklist";
const description = "Verification info for supplement brands";
const canonical = "https://vitaminbrandindex.com/for-brands/";
---
<Base {title} {description} {canonical}>
  <main class="container stack-lg">
    <header class="page-header">
      <h1>For Brands</h1>
      <p class="lead">Get your brand verified and featured in our independent directory.</p>
    </header>
    
    <section class="stack">
      <p>
        The Vitamin Brand Index provides transparent, fact-based information about supplement brands to help consumers make informed decisions. We compile data from public sources, third-party certifications, and directly from brands.
      </p>
      
      <p>
        If you represent a brand and would like to:
      </p>
      
      <ul>
        <li>Submit your brand for inclusion in our directory</li>
        <li>Update or correct information about your brand</li>
        <li>Provide additional verification documentation</li>
        <li>Request removal of outdated information</li>
      </ul>
      
      <div class="stack" style="margin-top:1.5rem;">
        <p>
          <a href="/submit/" class="button">Submit a Brand</a>
        </p>
        
        <p>
          For other inquiries, please contact us at <a href="mailto:verify@vitaminbrandindex.com" class="link">verify@vitaminbrandindex.com</a>
        </p>
      </div>
    </section>
  </main>
</Base>
