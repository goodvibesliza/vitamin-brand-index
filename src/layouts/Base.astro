---
// Handle both direct props and MDX frontmatter
const frontmatter = Astro.props.frontmatter || {};
const {
  title = frontmatter.title || "Vitamin Brand Index",
  description = frontmatter.description || "Natural brands. Real facts. No hype.",
  canonical = frontmatter.canonical || "https://vitaminbrandindex.com/",
} = Astro.props;
import "../styles/base.css";
import "../styles/typography.css";
import SiteFooter from "../components/SiteFooter.astro";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />

    <!-- Font loading: Libre Baskerville for headings, with swap and limited weights -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@400;700&display=swap" rel="stylesheet">

    <!-- Plausible -->
    {import.meta.env.PROD && (
      <script defer data-domain="vitaminbrandindex.com" src="https://plausible.io/js/script.js"></script>
    )}

    <!-- Remove stale per-page CSS (blog placeholder) -->
    <script is:inline>
      try {
        document.querySelectorAll('link[rel="stylesheet"]').forEach((lnk) => {
          const href = lnk.getAttribute('href') || '';
          if (href.startsWith('/_astro/_post_') || href.startsWith('/_astro/_slug_')) {
            lnk.remove();
          }
        });
      } catch {}
    </script>
  </head>
  <body>
    <header>
      <div class="container" style="display:flex;justify-content:space-between;align-items:center;">
        <a href="/" style="font-weight:600;text-decoration:none;color:inherit;">Vitamin&nbsp;Brand&nbsp;Index</a>
      </div>
    </header>
    <slot />

    <SiteFooter />
  </body>
</html>
